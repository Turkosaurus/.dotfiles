#!/usr/bin/env bash

echo "🔭 Installing ripgrep (rg) ..."

if ! bin/util/require root; then
    exit 1
fi

if rg --version; then
    echo "🟢 rg already installed."
    exit 0
fi

echo "🟨 Installing rg ..."
if ! sudo apt install ripgrep -y; then
    echo "❌ Failed to install ripgrep."
    exit 1
fi

if rg --version; then
    echo "🟢 ripgrep newly installed."
    exit 0
fi