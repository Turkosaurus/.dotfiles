#!/usr/bin/env bash

git pull

git add .

changes=$(git diff --cached | wc -l)
if [ "$changes" -eq 0 ]; then
    echo "No changes to sync."
    exit 0
fi

echo "Syncing $changes changes ... "


# iso8601 date
git commit -m "autosync"

git status
# git push

echo "Completed syncing $changes changes."